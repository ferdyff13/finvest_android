<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_double">

        <LinearLayout
            android:id="@+id/llInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_double"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/forgot_pwd.title"
                android:textColor="@color/white"
                android:textSize="@dimen/font_big"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_double"
                android:background="@drawable/rounded_edittext"
                android:digits="qwertyuiopasdfghjklzxcvbnm1234567890_-.@"
                android:hint="@string/forgot_pwd.email"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:textColorHint="@color/hintColor"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_double"
                android:text="@string/forgot_pwd.security_question"
                android:textColor="@color/white"
                android:textSize="@dimen/font_reg" />

            <Spinner
                android:id="@+id/sQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space"
                android:background="@drawable/rounded_edittext"
                android:entries="@array/dummy_array"
                android:focusable="false"
                android:fontFamily="sans-serif"
                android:spinnerMode="dialog"
                android:textColorHint="@color/hintColor"
                android:textSize="@dimen/font_medium" />

            <EditText
                android:id="@+id/etAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/forgot_pwd.security_answer"
                android:maxLength="100"
                android:textColorHint="@color/hintColor"
                android:textSize="@dimen/font_medium" />

            <Button
                android:id="@+id/bSubmit"
                style="@style/GenericRaisedButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/space_xtra"
                android:layout_marginRight="@dimen/space_xtra"
                android:layout_marginTop="@dimen/space_double"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_double"
                android:gravity="center"
                android:text="@string/forgot_pwd.clue"
                android:textColor="@color/grey_100"
                android:textSize="@dimen/font_reg"
                android:textStyle="italic" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
