                            <!--android:text="Salin"-->
                            <!--android:textColor="@color/white"-->
                            <!--android:textSize="@dimen/font_small" />-->

                    <!--</LinearLayout>-->
                    <!--end-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space"
                    android:gravity="center_vertical"
                    android:padding="@dimen/space_double"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/button_primary"
                        android:backgroundTint="@color/grayColor"
                        android:gravity="center"
                        android:padding="@dimen/space_double">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_small"
                            android:text="Perhatian :"
                            android:id="@+id/textView3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_small"
                            android:text="Kode tambah saldo anda sebelumnya sudah tidak berlaku. Silahkan gunakan kode ini untuk tambah saldo anda."
                            android:id="@+id/textView4"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/space_double">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textSize="@dimen/font_small"
                            android:text="@string/text_summary_finpay_1"
                            android:id="@+id/textView5"
                            android:gravity="center"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textSize="@dimen/font_small"
                        android:text="Untuk Bank BCA dan Gerai, tambahkan angka 0 di depan Kode Tambah Saldo Anda (Contoh : 021xxxx menjadi 0021xxxx)"
                        android:id="@+id/textView6"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/space"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textSize="@dimen/font_small"
                        android:text="Apabila saldo belum bertambah dalam waktu 15 menit, silahkan menghubungi call center 1500770"
                        android:id="@+id/textView7"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/space"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>