<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="@dimen/space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvPackageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_600"
                android:textSize="@dimen/font_medium"
                tools:text="Invisee Package" />

            <TextView
                android:id="@+id/txvAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="INV1231231231" />

            <TextView
                android:id="@+id/txvInvestmentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space"
                android:textSize="@dimen/font_big"
                tools:text="Rp 10.000.000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.02"
            android:padding="@dimen/space"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvReminderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_xbig"
                android:layout_gravity="right"
                tools:text="08:00" />

            <TextView
                android:id="@+id/txvNextDate"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="@dimen/font_medium"
                tools:text="12 Jan 2012" />

            <TextView
                android:id="@+id/txvAutodebit"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Autodebet" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--<ImageView-->
                    <!--android:id="@+id/imvAlarm"-->
                    <!--android:layout_width="28dp"-->
                    <!--android:layout_height="28dp"-->
                    <!--android:src="@drawable/ic_alarm_off_grey_32px"-->
                    <!--android:tint="@color/grey_500" />-->

<!--                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/compatSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_half"
                    android:layout_marginStart="@dimen/space_half" />-->

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingRight="@dimen/space"
            android:paddingLeft="@dimen/space"
            android:paddingTop="@dimen/_2sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp">

            <ImageView
                android:id="@+id/icClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/grey_400"
                android:src="@drawable/ic_close"/>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/grey_400" />

</LinearLayout>