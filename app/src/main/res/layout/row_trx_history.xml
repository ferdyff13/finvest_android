<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/GenericCardViewStyle"
    android:layout_margin="@dimen/space_half">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rvDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/space"
                android:paddingLeft="@dimen/space"
                android:paddingTop="@dimen/space"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_catalogue"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:paddingLeft="@dimen/space"
                android:paddingRight="@dimen/space"
                android:paddingTop="@dimen/space"
                android:text="@string/history.pkg_name"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_tiny"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvPackageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/space_half"
                android:layout_toRightOf="@+id/icon"
                android:paddingBottom="@dimen/space"
                android:paddingLeft="@dimen/space"
                android:paddingRight="@dimen/space"
                android:textColor="@color/red_600"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/grey_500" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_500"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/liNoPesanan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/history.order_number"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/font_tiny"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvOrderNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/red_600"
                    android:textSize="@dimen/font_reg"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/liNoRek"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/history.inv_number"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/font_tiny"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvInvestmentNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/red_600"
                    android:textSize="@dimen/font_reg"
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/grey_500" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_500"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/liTglTrans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/history.trx_date"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/font_tiny"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvTrxDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/red_600"
                    android:textSize="@dimen/font_reg"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/liStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/history.trx_status"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/font_tiny"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvTrxStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/red_600"
                    android:textSize="@dimen/font_reg"
                    android:textStyle="bold" />

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
