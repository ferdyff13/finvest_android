<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pembelian Reksa Dana - FinPay"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_double"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/space_double"
        android:layout_marginRight="@dimen/space_double"
        android:layout_marginTop="@dimen/space"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akun FINPAY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Pemesanan : "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Pembelian : "/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/space_half"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/space"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txvaccVp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000000000001"/>


            <TextView
                android:id="@+id/txvbalanceVp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000000000001"/>


            <TextView
                android:id="@+id/txvOrderNumberVp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000000000001"/>

            <TextView
                android:id="@+id/txvTotalVp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000000000001"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/space_triple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cancelConfirmatioVP"
                style="@style/GenericRaisedButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:minWidth="120dp"
                android:orientation="vertical"
                android:padding="@dimen/space">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/cancel"
                    android:typeface="monospace"
                    android:textAllCaps="true"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/okConfirmatioVP"
                android:layout_marginLeft="@dimen/space_quadruple"
                android:typeface="monospace"
                style="@style/GenericRaisedButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:minWidth="120dp"
                android:orientation="vertical"
                android:padding="@dimen/space">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/ok"
                    android:textAllCaps="true"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>