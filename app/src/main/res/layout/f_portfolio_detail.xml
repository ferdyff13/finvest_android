<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="@dimen/space_triple"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_marginTop="@dimen/space_double"
        android:background="@color/grey_400"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp">
    </LinearLayout>

    <TextView
        android:id="@+id/tvPackageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_double"
        android:layout_marginLeft="@dimen/space_double"
        android:layout_marginRight="@dimen/space_double"
        android:layout_marginStart="@dimen/space_double"
        android:layout_marginTop="@dimen/space_double"
        android:textColor="@color/red_600"
        android:textSize="@dimen/font_big"
        tools:text="Invisee Package" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_double"
        android:layout_marginLeft="@dimen/space_double"
        android:layout_marginRight="@dimen/space_double"
        android:layout_marginStart="@dimen/space_double"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvInvestmentNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/grey_700"
            tools:text="[INV123]" />

        <TextView
            android:id="@+id/tvUrealizeGainLoss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:text="IDR 40.000" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_double">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/portfolio.investment_amount" />

            <TextView
                android:id="@+id/tvInvesmentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/font_medium"
                tools:text="IDR 10.000.000" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_double">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/portfolio.market_value" />

            <TextView
                android:id="@+id/tvMarketValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/font_medium"
                tools:text="IDR 10.000.000" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_double">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/portfolio.goal" />

            <TextView
                android:id="@+id/tvGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/font_medium"
                tools:text="Loop" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:paddingLeft="@dimen/space_double"
        android:layout_marginBottom="@dimen/space_triple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/portfolio.unrealize_gainloss" />

            <TextView
                android:id="@+id/tvUrealizeGainLossPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"

                android:textColor="@color/grey_900"
                android:textSize="@dimen/font_medium"
                tools:text="-3%" />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    </ScrollView>

</FrameLayout>